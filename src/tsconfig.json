{
  "compilerOptions": {
    "rootDir": "../src",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom", "dom.iterable", "esnext"
    ],
    "strict": true,
    "declaration": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": true,
    "typeRoots": [
      "../node_modules/@types",
      "<rootDir>/typings"
    ],
    "strictNullChecks": false
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
